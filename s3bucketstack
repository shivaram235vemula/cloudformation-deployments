AWSTemplateFormatVersion: '2010-09-09'
Description: Deploys an S3 bucket using a CloudFormation template from GitHub

Parameters:
  GitHubRepoURL:
    Type: String
    Description: "GitHub raw URL of the S3 bucket template"
  BucketName:
    Type: String
    Description: "Enter the S3 bucket name"

Resources:
  TagoreStack:
    Type: AWS::CloudFormation::Stack
    Properties:
      TemplateURL: !Ref https://github.com/shivaram235vemula/cloudformation-deployments/
      Parameters:
        BucketName: !Ref BucketName

Outputs:
  StackName:
    Description: "Deployed CloudFormation Stack Name"
    Value: !Ref s3bucket

